#3# Install PostgreSQL :
# assume root installation , otherwise create installusr with sudo permissions to use pip, apt etc
# update OS to latest :
apt update
# install PostgreSQL and pre-reqs :
apt install postgresql postgresql-contrib
# do PostgreSQL start and setup :
service postgresql start
# become postgres user to use psql :
su - postgres -c "psql"
# SQL follows :
CREATE DATABASE ourdb ;
CREATE USER ourdbuser WITH PASSWORD 'f!shH34d' ;
# These lines TUNE/CUSTOMISE the DB :
ALTER ROLE ourdbuser SET client_encoding TO 'utf8' ;
ALTER ROLE ourdbuser SET timezone TO 'UTC' ;
ALTER ROLE ourdbuser SET default_transaction_isolation TO 'read committed' ;
# Make ourdbuser superuser :
GRANT ALL PRIVILEGES ON DATABASE ourdb TO ourdbuser ;
\q
